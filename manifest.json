{
  "manifest_version": 3,
  "name": "Multi-Tool Productivity Extension",
  "version": "1.1",
  "description": "Website timer, task scheduler, document summarizer, and meeting auto-opener with notifications.",
  "permissions": ["tabs", "scripting", "storage", "alarms", "notifications"],
  "host_permissions": ["<all_urls>", "https://api.mocki.io/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Productivity Tools"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}